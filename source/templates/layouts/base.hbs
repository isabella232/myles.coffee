<!DOCTYPE html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>{{config.site_title}}</title>
        <meta name="description" content="{{config.site_description}}">
        <meta name="keywords" content="{{#each config.site_keywords}}{{#unless @first}}, {{/unless}}{{this}}{{/each}}">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="apple-touch-icon" href="apple-touch-icon.png">

        <link rel="stylesheet" href="/assets/stylesheets/style.css">
        <script src="/assets/javascript/libs/modernizr-2.8.3.min.js"></script>
    </head>
    <body class="body-{{basename}}">
        <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        <div class="page page-{{basename}}">
            {{> body}}
        </div>

        {{#if production}}
        <script>
            (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=
            function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;
            e=o.createElement(i);r=o.getElementsByTagName(i)[0];
            e.src='https://www.google-analytics.com/analytics.js';
            r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));
            ga('create','{{config.google-analytics}}','auto');
            ga('send','pageview');
        </script>
        {{/if}}

        <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
        <script>window.jQuery || document.write('<script src="/assets/javascript/libs/jquery-1.12.0.min.js"><\/script>')</script>
        <script src="/assets/javascript/script.js"></script>
    </body>
</html>
