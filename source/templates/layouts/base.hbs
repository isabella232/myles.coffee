<!DOCTYPE html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">

        <title>{{config.site_title}}</title>

        <meta name="description" content="{{config.site_description}}">
        <meta name="keywords" content="{{#each config.site_keywords}}{{#unless @first}}, {{/unless}}{{this}}{{/each}}">

        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="/assets/stylesheets/style.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">

        <script src="/assets/javascript/libs/modernizr-2.8.3.min.js"></script>

        <link rel="canonical" href="{{config.url}}{{canonical page.dest}}">
        <link rel="onion" href="https://kqfrcfjyom54yuks.onion{{canonical page.dest}}">

        {{> schema}}

        {{> twitter-card}}

        {{> favicons}}

        {{> open-graph}}
    </head>
    <body class="body-{{basename}}">
        <div class="page page-{{basename}}">
            {{> body}}
        </div>

        {{#if production}}
        <script>
          (function(b, o, i, l, e, r) {
            b.GoogleAnalyticsObject = l;
            b[l] || (b[l] =
              function() {
                (b[l].q = b[l].q || []).push(arguments)
              });
            b[l].l = +new Date;
            e = o.createElement(i);
            r = o.getElementsByTagName(i)[0];
            e.src = 'https://www.google-analytics.com/analytics.js';
            r.parentNode.insertBefore(e, r)
          }(window, document, 'script', 'ga'));
          ga('create', '{{config.google-analytics}}', 'auto');
          ga('send', 'pageview');
          ga('send', 'event', {
            eventCategory: 'Date',
            eventAction: 'last_update',
            eventLabel: '{{now "%Y-%m-%d_%H-%M-%S"}}',
            nonInteraction: true
          });
        </script>
        {{/if}}

        <script src="/assets/javascript/libs/jquery-1.12.0.min.js"></script>
        <script src="/assets/javascript/script.js"></script>
    </body>
</html>
